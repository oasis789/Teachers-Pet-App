<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.uwais.teacherspet2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TeachersPetApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".LoginActivity"
            android:label="Teachers Pet Application"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="Welcome to the Main Menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ClassSelectorActivity"
            android:label="Please Select a Class" >
        </activity>
        <activity
            android:name=".TimeTableActivity"
            android:label="Your TimeTable"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="Register Your Students"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:label="Create a new Assessment"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".AssessmentResultsActivity"
            android:label="View Assessment Results"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="Search for Data"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name=".StudentTabActivity" >
        </activity>
        <activity android:name=".AssessmentTabActivity" >
        </activity>
    </application>

</manifest>